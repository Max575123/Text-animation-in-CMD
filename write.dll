#include <iostream>
#include <string>
#include "Windows.h"

const int strmax = 3; // max number of string
int strquan = 1; // number of string
horizontal = 120;
vetrical = 30;

int write2cen(std::string text) // writing text in center
	{
		if(strquan == 1) // if 1-st string
		{
			for(int i = 0; i < ((vetrical - 3)/2); i ++) // vertical center
			{
				std::cout << std::endl;
			}
		}
		for(int i = 0; i < ((horizontal - text.length()) / 2); i ++) // horizontal center
		{
			std::cout << " ";
		}
		for(int i = 0; i < text.length(); i++) // Writing text by chars
			{
				std::cout << text[i];
				Sleep(100); // wait 100 milliseconds
			}
		std::cout << std::endl;
			if(strquan < strmax) // if number of string < max number of string
			{
				strquan ++;
			}
			else // else, if number = or > max number of string
			{
				std::system("cls"); // clean screen CMD
				strquan = 1;
			}
		return 0;
	}